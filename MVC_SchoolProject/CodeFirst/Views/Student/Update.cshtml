@using CodeFirst.Entities.Concrete;
@{
    ViewData["Title"] = "Update";
}
@model AddStudentVM

<h1 class="text-warning">Update</h1>

<h1>Update</h1>

@if (ViewBag.Bildiri != null)
{
    <div class="text-warning">
        @ViewBag.Bildiri
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <input asp-for="Id" type="hidden"/>
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
            <label asp-for="Class" class="control-label"></label>
            <input asp-for="Class" class="form-control" />
            <span asp-validation-for="Class" class="text-danger"></span>
            <label class="control-label">Ders</label>
            <select asp-for="LessonId" class="form-control">
                @foreach (Lesson item in Model.Lessons)
                {
                    if (item.Id == @Model.LessonId)
                    {
                        <option value="@item.Id" selected="@Model.LessonId">@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id" >@item.Name</option>
                    }
                }
            </select>
            <label class="control-label">Okul</label>
            <select asp-for="SchoolId" class="form-control">
                @foreach (School item in Model.Schools)
                {
                    if (item.Id == @Model.LessonId)
                    {
                        <option value="@item.Id" selected="@Model.SchoolId">@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            </select>
            <div class="form-group">
                <input type="submit" value="Öğrenci Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>