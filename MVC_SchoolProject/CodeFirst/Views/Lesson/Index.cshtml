@using CodeFirst.Entities.Concrete;
@{
    ViewData["Title"] = "Ders Sayfa";
}
@model List<Lesson>

<h1 class="text-danger"> Ders Sayfa</h1>



@if (TempData["Bildiri"] != null)
{
    <div class="bg-warning text-primary">
        @TempData["Bildiri"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Oluşma Zamanı
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Lesson item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.CreateTime.ToString("dd/MM/yyyyy")
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update </a>
                    <a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete </a>
                </td>
            </tr>
        }
    </tbody>

</table>


<div>
    <a class="btn btn-outline-primary" asp-action="Create">Create</a>
</div>