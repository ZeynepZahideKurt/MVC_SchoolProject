@model List<Student>


<table class="table table-borderless">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>LastName</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.FirstName
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    <td>
                        <a class="btn btn-warning"> Details</a>
                        <a class="btn btn-danger"> Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
